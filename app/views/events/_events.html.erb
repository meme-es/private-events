<div id="accordion">
  <% events.each do |event| %>
    <div class="card">
      <div class="card-header">
        <a class="collapsed card-link text-black-50" data-toggle="collapse" href="#collapse<%= event.id %>">
          <%= event.title %> by <b><%= event.creator.fullname %></b>
        </a>
      </div>
      <div id="collapse<%= event.id %>" class="collapse" data-parent="#accordion">
        <div class="card-body">
          <p><b>Description:</b> <%= event.description %><br/>
        <b>Date:</b> <%= event.date %><br/>
        <b>Location:</b> <%= event.location %></p>
      <div class='float-right pb-3'>
        <%= link_to 'Show', event, class: 'btn btn-secondary' %>
        <% disabled_attend_class =  attend_events.include?(event) ? 'btn btn-secondary disabled' :  'btn btn-secondary' %>
        <%= link_to 'Attend', attendances_path(user_id: session[:user_id], event_id: event.id), method: :post, class: disabled_attend_class %>
        <% disabled_class =  (event.user_id == session[:user_id]) ? 'btn btn-danger ' :  'btn btn-danger disabled' %>
        <%= link_to 'Edit', edit_event_path(event), class: disabled_class %>
        <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, class: disabled_class %>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
